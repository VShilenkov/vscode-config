    "cmake.buildDirectory": "${workspaceFolder}/build_${buildKit}/${buildType}",

    "cmake.configureArgs": [
//        "--debug-find"
    ],
    "cmake.configureSettings": {
        "CMAKE_VERBOSE_MAKEFILE": "false",
